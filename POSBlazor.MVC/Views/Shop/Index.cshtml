@model POSBlazor.MVC.Models.Shop.ShopListViewModel;
@{
    ViewData["Title"] = "Danh Sách Cửa Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-home mr-1"></i>
        Danh Sách Cửa Hàng
        <div class="mt-2 d-inline-block">
            <div>
                <a class="btn btn-success" asp-action="ShowAddNewPage" asp-controller="Shop">
                    <i class="fas fa-plus mr-1"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Địa Chỉ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shop in Model.shops)
                    {
                        <tr>
                            <td>@shop.ShopName</td>
                            <td>@shop.Address</td>
                            <td>
                                <form>
                                    <div class="d-flex">
                                        <a class="btn btn-success mr-1" asp-route-shopId="@shop.Id" asp-action="ShowEditShop">
                                            <i class="far fa-edit mr-1"></i>
                                        </a>
                                        <a class="btn btn-danger mr-1" asp-action="DeleteShop" asp-controller="Shop" asp-route-shopId="@shop.Id">
                                            <i class="far fa-trash-alt mr-1"></i>
                                        </a>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

